<%- include("../partials/header"); -%>
<%- include("../partials/navbar"); -%>

<section class="section about-section gray-bg" id="about">
            <div class="container">
                <div class="row align-items-center flex-row-reverse">
                    <div class="col-lg-6">
                        <div class="about-text go-to">
                            <h3 class="dark-color"><%=userProfile.firstName+" " + userProfile.lastName %> Profile</h3>
                            <h6 class="theme-color lead">Event Publisher in events website</h6>
                            <p>I <mark>Event Publisher </mark> in events website </p>
                            <div class="row about-list">
                                <div class="col-md-6">
                                    <div class="media">
                                        <label>Name</label>
                                        <p><%=userProfile.firstName+" " + userProfile.lastName %></p>
                                    </div>
                                    <div class="media">
                                        <label>Age</label>
                                        <p>24 Yr</p>
                                    </div>
                                    <div class="media">
                                        <label>Residence</label>
                                        <p><%=userProfile.city%></p>
                                    </div>
                                    <div class="media">
                                        <label>Address</label>
                                        <p>California, USA</p>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="media">
                                        <label>E-mail</label>
                                        <p><%=userProfile.email%></p>
                                    </div>
                                    <div class="media">
                                        <label>Phone</label>
                                        <p>820-885-3321</p>
                                    </div>

                                    <div class="media">
                                        <label>publish</label>
                                        <p>Available</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6 text-center">
                        <div class="about-avatar">
                          <%if(userProfile.avatar){%>
                          <img src="/images/<%=userProfile.avatar %>" title="" alt="" style=" width:20rem">
                        <%  }else {%>
                                <img src="/images/profile.png" title="" alt="" style=" width:20rem">
                          <%}%>


                        </div>
                    </div>
                </div>
                <div class="counter">
                    <div class="row">
                        <div class="col-6 col-lg-3">
                            <div class="count-data text-center">
                              <%if(events > 0 ) {%>
                                <h6 class="count h2" data-to="500" data-speed="500">+<%=events%></h6>
                                <p class="m-0px font-w-600">Events</p>
                              <%}else{%>
                                <h6 class="count h2" data-to="500" data-speed="500">---</h6>
                                <p class="m-0px font-w-600">Events</p>
                              <%}%>

                            </div>
                        </div>


                        <div class="col-6 col-lg-3">
                            <div class="count-data text-center">

                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </section>

          <%- include("../partials/footer"); -%>
