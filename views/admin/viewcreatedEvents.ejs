
<%- include("../partials/adminLayout"); -%>

<div class="dark" id="events">
  <div class="cardsSection container py-3">
    <div class="row mt-3 mb-5">
      <div class="col-md-12">
        <h1 class="text-center" style="text-align:center">Latest Event</h1>
      </div>
    </div>


      <div class="row row-cols-1 row-cols-md-3 mb-3 text-center">
        <%allEvents.forEach((events)=>{%>
    <div class="col-md-4">
      <div class="card mb-4 rounded-3 shadow-sm">
        <div class="card-body">
          <%    if(!(events.isActive)){%>
                <p class="badge bg-danger" > Hidden.</p>
              <%}%>
          <h2 class="card-title pricing-card-title"><b><%=events.title%></b></h2>
          <% if(events.description.length > 90){ %>
              <p><%=events.description.substring(0,90) + "..." %></p>
          <%}else{%>
              <p> <%=events.description %> </p>
        <%  }%>

          <p class="badge bg-secondary" >from: <%=events.location %>.</p>
          <a href="<%='/admins/showEvent/'+ events._id %>"  class="w-100 btn btn-lg btn-outline-primary">Read more</a>
        </div>
      </div>
    </div>

<%});%>


      </div>





  </div>

</div>

<%- include("../partials/adminFooter"); -%>
